<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceCommand">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="local ip="
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="409dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text="connection=false"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="415dp"
        android:layout_height="221dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:scrollbars="vertical"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:onClick="button_recog_once_clicked"
        android:text="Recog Once"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:onClick="button_recog_cont_clicked"
        android:text="Recog Cont"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>